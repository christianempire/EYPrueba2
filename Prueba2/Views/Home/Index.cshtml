@model HomeViewModel
@{
    ViewData["Title"] = "Inicio";
}

<section class="mt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Index</th>
                            <th>Cód. Art.</th>
                            <th>Nombre Art.</th>
                            <th>Desc. Art.</th>
                            <th>Cant. Art.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <a class="btn btn-lg btn-primary" asp-controller="Item" asp-action="Insert">Insertar artículo</a>
                <a class="btn btn-lg btn-primary" asp-controller="Item" asp-action="Update">Modificar artículo</a>
                <a class="btn btn-lg btn-primary" asp-controller="Item" asp-action="Delete">Eliminar artículo</a>
            </div>
        </div>
    </div>
</section>